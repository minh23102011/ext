{
  "manifest_version": 3,
  "name": "Chess.com Live Monitor",
  "version": "2.0.1",
  "description": "Real-time chess game data extractor for Chess.com",
  "permissions": ["scripting", "storage", "sidePanel"],
  "host_permissions": ["http://127.0.0.1/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/game/*",
        "https://www.chess.com/play/*"
      ],
      "js": [
        "content/fen_aggregator.js",
        "content/fen_dom.js",
        "content/fen_ws.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject/ws_hook.js"],
      "matches": ["https://www.chess.com/*"]
    }
  ]
}